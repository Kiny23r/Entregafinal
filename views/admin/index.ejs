<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Painel Administrativo da Concessionária</title>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- CSS personalizado -->
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>

  <!-- Cabeçalho com nome, info e botões -->
  <header class="header">
    <div class="header-top">
      <h1 class="logo">Premium Motors</h1>
      <div class="header-info">
        <span><i class="fas fa-map-marker-alt"></i> Av. Brasil, 123 - Centro</span>
        <span><i class="fas fa-phone-alt"></i> (53) 99967-9630</span>
        <span><i class="fas fa-clock"></i> Seg a Sáb: 8h - 18h</span>
        <span><i class="fas fa-user"></i> Admin</span>
      </div>
    </div>
    <nav class="header-buttons">
      <a href="/admin/veiculo/lst" class="nav-btn"><i class="fas fa-car"></i> Veículos</a>
      <a href="/admin/cliente/lst" class="nav-btn"><i class="fas fa-user"></i> Clientes</a>
      <a href="/admin/venda/lst" class="nav-btn"><i class="fas fa-receipt"></i> Vendas</a>
      <a href="https://wa.me/5553999679630" target="_blank" class="nav-btn"><i class="fab fa-whatsapp"></i> Atendimento</a>
    </nav>
  </header>

  <main class="container">

    <!-- Destaques de veículos -->
    <section class="destaques">
      <h3>Veículos em Destaque</h3>
      <div class="card-grid">
        <% if (veiculos.length === 0) { %>
          <p>Nenhum veículo disponível no momento.</p>
        <% } else { %>
          <% veiculos.forEach(veiculo => { %>
            <div class="car-card">
              <% if (veiculo.imagem) { %>
                <img src="/css/<%= veiculo.imagem %>" alt="<%= veiculo.modelo || 'Veículo' %>">
              <% } else { %>
                <img src="/css/default-car.jpg" alt="Imagem padrão">
              <% } %>
              <h4><%= veiculo.modelo || 'Modelo não informado' %></h4>
              <p><%= veiculo.descricao || '' %></p>
            </div>
          <% }) %>
        <% } %>
      </div>
    </section>
    
    <!-- Os outros blocos do seu index podem ficar iguais -->

    <!-- Novos veículos -->
    <section class="novidades">
      <h3>Novos Chegaram</h3>
      <div class="card-grid">
        <div class="car-card">
          <img src="/css/hilux.jpg" alt="Hilux">
          <h4>Toyota Hilux</h4>
          <p>2022 • Diesel • 4x4</p>
        </div>
        <div class="car-card">
          <img src="/css/monza.jpg" alt="Monza">
          <h4>Chevrolet Monza</h4>
          <p>1993 • Clássico • Gasolina</p>
        </div>
        <div class="car-card">
          <img src="/css/chevete.jpg" alt="Chevette">
          <h4>Chevrolet Chevette</h4>
          <p>1985 • Antigo de Coleção</p>
        </div>
      </div>
    </section>

    <!-- Mais ofertas -->
    <section class="mais-ofertas">
      <h3>Mais Ofertas</h3>
      <div class="card-grid">
        <div class="car-card">
          <img src="/css/santana.jpg" alt="Santana">
          <h4>Volkswagen Santana</h4>
          <p>1995 • Gasolina • Manual</p>
        </div>
        <div class="car-card">
          <img src="/css/hb20.jpg" alt="HB20">
          <h4>Hyundai HB20</h4>
          <p>2021 • Flex • Automático</p>
        </div>
        <div class="car-card">
          <img src="/css/pajero.jpg" alt="Pajero">
          <h4>Mitsubishi Pajero</h4>
          <p>2019 • Diesel • 4x4</p>
        </div>
      </div>
    </section>

  </main>

  <footer>
    <p>&copy; 2025 Concessionária Premium Motors - Todos os direitos reservados</p>
  </footer>

</body>
</html>
